<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
<!-- Header -->
<%- include('./partials/header') %>
<!-- Header -->

	<div class="form-div">

		<h2 class="products-title bebas-neue-regular">Regístrate</h2>

		<form action="/profile" method="get" class="forms poppins-regular">
				
				<div class="form-label-div">
					<label for="email" class="form-label">Email</label>
					<input type="email" id="email" name="email" required class="input-text">
				</div>
			
				<div class="form-label-div">
					<label for="usuario" class="form-label">Usuario</label>
					<input type="text"  id="usuario" name="usuario" required class="input-text">
				</div>

				<div class="form-label-div">
					<label for="contraseña" class="form-label">Contraseña</label>
					<input type="password" id="contraseña" name="contraseña" required class="input-text">
				</div>

				<div class="form-label-div">
			  	  <label for="fecha nacimiento" class="form-label">Fecha de nacimiento</label>
			  	  <input type="date" id="fecha nacimiento" name="fecha nacimiento" required class="input-text">
				</div>

				<div class="form-label-div">
					<label for="documento" class="form-label">Numero de documento</label>
					<input type="number" id="documento" name="documento" required class="input-text">
				</div>

				<div class="form-label-div">
					<label for="foto perfil" class="form-label">Foto de perfil</label>
					<input type="file" name="foto perfil" accept="accept/*" placeholder="Ingresar imagen" required class="form-submit">
				</div>
				
				<div class="form-label-div">
					<button type="submit" class="form-submit">Registrarse</button>
				</div>

		</form>
	</div>

<!-- /Footer -->
<%- include('./partials/footer') %>
<!-- /Footer -->
</body>
</html>