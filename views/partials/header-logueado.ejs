<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo-techouse.png">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/results" method="get" class="search-form poppins-regular">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link poppins-regular">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar poppins-regular">
            <ul class="left-navbar">
                <li><a href="/">Todos los productos</a></li>
                <li><a href="/products/add">Cargar productos</a></li>
            </ul>

            <ul class="right-navbar">
                <li><a href="/profile">
                        <p><%= user.usuario %> <i class="fas fa-user"></i> </p>
                    </a>
                </li>
                <li>
                   <form action="/logout" method="post" class="">
                        <button type="submit" class="btn poppins-regular"> Cerrar Sesión </button>
                   </form>
                </li>
            </ul>
        </nav>
    </div>
</header>