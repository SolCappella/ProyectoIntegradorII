<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
<!-- Header -->
<%- include('./partials/header') %>
<!-- Header -->

    <div class="form-div">
        <h2 class="products-title bebas-neue-regular">Iniciar Sesión</h2>

            <form action="/login" method="post" class="forms poppins-regular" novalidate>

                <div class="form-label-div">
                    <label for="email" class="form-label"> Usuario: </label>
                    <input type="email" id="email" name="email" placeholder= "email" required class="input-text">
                    <% if (errors && errors.email) { %>
                        <p class="error-message"><%= errors.email.msg %></p>
                    <% } %>
                </div>

                <div class="form-label-div">
                    <label for="password" class="form-label"> Contraseña: </label>
                    <input type="password" id="password" name="password" placeholder="contraseña" required class="input-text">
                    <% if (errors && errors.password) { %>
                        <p class="error-message"><%= errors.password.msg %></p>
                    <% } %>
                </div>

                <div class="form-label-div">
                    <label for="recordarme" class="form-label"> Recuérdame</label>
                    <input type="checkbox" name="recordarme" id="recordarme">
                </div>
    
                <div class="form-label-div">
                    <button type="submit" class="form-submit">Login</button>
                </div>

                <% if (errors && errors.login) { %>
                    <p class="error"><%= errors.login.msg %></p>
                <% } %>
            </form>
    </div>
            
<!-- /Footer -->
<%- include('./partials/footer') %>
<!-- /Footer -->
</body>
</html>