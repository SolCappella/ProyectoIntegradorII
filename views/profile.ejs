<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
<!-- Header -->    
<% if (user) { %>
    <%- include('./partials/header-logueado') %>
<% } else { %>
    <%- include('./partials/header') %>
<% } %>
<!-- Header -->

    <section class="info-usuario container products-wrapper">
        <div class="row">
            <div class="img-container offset-3 col-2">
                <img src="/<%= userProfile.foto %>" alt="foto de perfil" class="foto-perfil">
            </div>
            <div class="data-container col-6">
                <div class="d-flex align-items-center ">
                    <h1 class="main-title bebas-neue-regular"><%= userProfile.usuario %> 
                        <% if (loggedUser && loggedUser.id === userProfile.id) { %>
                            <a href="/profile/<%= userProfile.id %>/edit">
                                <i class="fas fa-cog"></i>
                            </a>
                        <% } %>
                    </h1>
                    <a class="btn mt-3 ml-4 poppins-regular" href="#">SEGUIR</a>
                </div>
                <div>
                    <ul class="poppins-regular profile-ul">
                        <li><%= userProfile.email %></li>
                        <li><%= userProducts.length %> productos</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Mis productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title bebas-neue-regular"> Mis productos </h2>
            </div>
            <% for(let i = 0; i < userProducts.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/<%= userProducts[i].id %>">
                            <figure class="product-box_image">
                                <img src="/<%= userProducts[i].imagen_archivo %>" alt="<%= userProducts[i].nombre %>">
                            </figure>
                            <article class="product-box_data poppins-regular">
                                <h2 class="bebas-neue-regular"><%= userProducts[i].nombre %></h2>
                                <p><%= userProducts[i].descripcion %></p>
                            </article>
                        </a>
                    </section>  
                </div>
            <% } %>
        </div>
    </div>
    <!-- Mis productos -->

<!-- /Footer -->
<%- include('./partials/footer') %>
<!-- /Footer -->
</body>
</html>
